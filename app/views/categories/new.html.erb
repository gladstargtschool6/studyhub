<h1>Create new category</h1>

<div class="form-group mx-sm-3 mb-2">
    <%= form_for :category, :html => {:class => "form-inline"} do |f|%>
    <label class="sr-only">Category Name:</label><br>

    <%= f.text_field :name, :html => {:class => "form-control"} %><br>
    
    <%= f.submit%>
    <% end %>
</div>
