    <h1><%= @category.name %></h1>
    
    <h1>Edit The question</h1>
    <div>
        <%= form_for([@question.category, @question]) do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title , :class => "form-control-plaintext", :placeholder => (@question.title)%><br>
        <%= f.label :content %><br>
        <%= f.text_area :content , :class => "form-control-plaintext", :placeholder =>(@question.content)%><br>

        <%= f.submit :class => "btn btn-primary" %>
        <% end %>
    </div>